# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Environment
APP_ENVIRONMENT=development
APP_DEBUG=false

# Authentication
OAUTH_CLIENT_ID=your_oauth_client_id_here
OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:8080/callback

# Data Source API Keys
POLYGON_API_KEY=your_polygon_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
IEX_API_KEY=your_iex_api_key_here

# Database Configuration (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/trade_analyst
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=trade_analyst
DATABASE_USER=trade_user
DATABASE_PASSWORD=your_database_password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Storage Configuration
DATA_BASE_PATH=./data
BACKUP_PATH=./backups
LOG_PATH=./logs

# Server Configuration
FLASK_HOST=localhost
FLASK_PORT=8080
FLASK_SECRET_KEY=your_flask_secret_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Processing Configuration
BATCH_SIZE=1000
PARALLEL_WORKERS=4
TIMEOUT_SECONDS=300

# Validation Configuration
STRICT_MODE=false
MAX_PRICE=1000000.0
MIN_PRICE=0.01

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# Alerting Configuration
ALERT_EMAIL_RECIPIENTS=admin@yourcompany.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Feature Flags
ENABLE_REAL_TIME=false
ENABLE_STREAMING=false
ENABLE_ANALYTICS=true

# Development Settings
AUTO_RELOAD=true
SHOW_SQL=false
ENABLE_PROFILING=false
MOCK_DATA_SOURCES=false

# Third-party Services
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Caching
CACHE_TTL_SECONDS=3600
ENABLE_CACHING=true

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
NOTIFICATION_SERVICE_URL=https://api.notifications.com
ANALYTICS_SERVICE_URL=https://api.analytics.com
